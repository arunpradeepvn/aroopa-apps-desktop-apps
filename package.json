{
  "name": "aroopa-apps",
  "version": "1.0.8",
  "description": "Aroopa Apps Desktop Application",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "npx electronmon . --trace-warnings .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder --publish=always",
    "beta-build": "electron-builder --publish=always"
  },
  "repository": "https://github.com/arunpradeepvn/aroopa-apps-desktop-apps",
  "keywords": [],
  "author": "Aroopa",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.aroopaapps.desktop.apps",
    "productName": "Aroopa Apps",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "src/assets"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/aroopaapps_icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "identity": "Developer ID Application: Arunpradeep Nagarajan (J254VTF3G4)",
      "icon": "src/assets/aroopaapps_icon.icns"
    },
    "linux": {
      "icon": "src/assets/aroopaapps_icon.png"
    },
    "afterSign": "build/notarize.js"
  },
  "devDependencies": {
    "@electron/packager": "^18.4.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "electron-notarize": "^1.2.2"
  },
  "dependencies": {
    "electron-log": "^5.4.2",
    "electron-updater": "^6.6.2"
  }
}
